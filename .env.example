# Telegram API
TELEGRAM_TOKEN=your_telegram_bot_token
BOT_TOKEN=your_telegram_bot_token  # fallback, kept for backward compatibility
ALLOWED_USERS=5015100177           # comma separated user ids allowed during beta

# OpenAI / GPT
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4o-mini

# Google Cloud / Vertex AI
GCP_PROJECT_ID=your_google_project_id
GCP_LOCATION=us-central1
GOOGLE_CLOUD_LOCATION=us-central1
GCP_KEY_JSON_B64=base64_encoded_service_account_json
GOOGLE_CREDENTIALS_JSON=""  # optional JSON if not using base64
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service_account.json
VEO_MODEL=veo-3.0-fast-generate-001
VEO_OUTPUT_GCS_URI=gs://your-bucket/path/
DOWNLOAD_VIDEOS=1

# SMTP (SOS reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=support@example.com
SMTP_PASS=your_smtp_password
FROM_EMAIL=support@example.com
SUPPORT_TO_EMAIL=support-inbox@example.com
ADMIN_CHAT_ID=123456789,987654321

# Payments / YooKassa
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Try-on & Nano (use same Google credentials)
NANO_ENABLED=1
TRYON_SAMPLE_COUNT=1

# Logging / monitoring
LOG_LEVEL=INFO
SENTRY_DSN=""

# Deployment flags
RAILWAY_ENVIRONMENT=false
RENDER_ENVIRONMENT=false

# Network retries / timeouts
HTTP_RETRIES=3
HTTP_TIMEOUT=60
IMAGE_HTTP_TIMEOUT=180
TRYON_HTTP_TIMEOUT=240
NANO_HTTP_TIMEOUT=180
